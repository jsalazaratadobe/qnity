{
  "definitions": [
    {"title": "Contact Form Block",
      "id": "contact-form-block",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "contact-form-block",
              "model": "contact-form-block"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "contact-form-block",
      "fields": [
        {
          "component": "select",
          "valueType": "string",
          "name": "select",
          "label": "Salutation",
          "required": true,
          "options": [
            { "name": "Mr.", "value": "Mr." },
            { "name": "Mrs.", "value": "Mrs." },
            { "name": "Ms.", "value": "Ms." },
            { "name": "Mx.", "value": "Mx." }
          ]
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "first",
          "label": "First Name",
          "required": true
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "last",
          "label": "Last Name",
          "required": true
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "email",
          "label": "Email",
          "required": true,
          "validation": {
            "minLength": 1955,
            "maxLength": 1985,
            "regExp": "\\.[A-Za-z]{2,}$",
            "customErrorMsg": "Email incorrect. Please check again."
          }
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "phone",
          "label": "Phone Number",
          "required": true,
          "validation": {
            "minLength": 10,
            "maxLength": 20,
            "regExp": "^\\(?\\d{3}\\)?[\\s.-]?\\d{3}[\\s.-]?\\d{4}$",
            "customErrorMsg": "Incorrect. Please check again."
          }
        }
  ],
  "filters": []
    }
  ]
}
